<!DOCTYPE html>
<html>
    <head>
        <title><%= title %></title>
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link rel='stylesheet' href='/stylesheets/style.css' />
        <script type="text/javascript" src="/javascripts/lib/jquery-2.1.4.js"></script>
        <script src="http://pv.sohu.com/cityjson?ie=utf-8"></script>
        <script type="text/javascript" src="/javascripts/sendData.js"></script>
        <style type="text/css">  
            #text2 {  
                border: 0 none white;  
                overflow: hidden;  
                padding: 0; 
                margin-left: 10px;  
                outline: none;  
                background-color: #333;  
                resize: none;
                color: #FFFFFF;
            }
            textarea {
                font-size: 23px;
                width: 45%;
            }
    </style>  
    <script type="text/javascript">  
        $(document).ready(function(){

            function trans(){
                var str4 = $("#text1").val();
                var newStr = str4.replace( /[0-9]+/g,function ($0){
                    var str = '';
                    var flag = 0;
                    for (var i = $0.length-1; i >= 0; i--) {
                        str = $0[i] + str;
                        if(++flag === 3 && i !== 0){
                            str = ',' + str;
                            flag = 0;
                        }
                    };
                    return str;
                });
                $("#text2").val(newStr);
            }

            $("#trans").click(function(){
                trans();
            });

            $("#text1").keyup(function(){
                trans();
            });

        });
    </script>  
    </head>
    <body>  
        <textarea rows="23" id="text1"></textarea>
        <textarea rows="23" id="text2"></textarea><br>
        <button id="trans">转换</button>
    </body>
</html>